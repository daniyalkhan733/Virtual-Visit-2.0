---
import MainLayout from "../layouts/MainLayout.astro";
import View360 from "../components/View360.astro";
import TeamSection from "../components/TeamSection.astro";
---
<MainLayout>
	
<View360 />
<section class="py-8 bg-gray-100">
	<div class="max-w-6xl mx-auto px-4">
	  <div class="flex items-center justify-between mb-4">
		<h2 class="text-xl font-bold text-gray-800">More Virtual Tours</h2>
		<div class="flex space-x-2">
		  <button id="prev-tours" class="bg-gray-300 hover:bg-gray-400 text-gray-800 p-1 rounded">
			<i class="fas fa-chevron-left"></i>
		  </button>
		  <button id="next-tours" class="bg-gray-300 hover:bg-gray-400 text-gray-800 p-1 rounded">
			<i class="fas fa-chevron-right"></i>
		  </button>
		</div>
	  </div>
	  
	  <!-- Tour cards carousel -->
	  <div class="overflow-x-auto custom-scrollbar pb-4">
		<div id="tours-carousel" class="flex space-x-4 w-max">
		  <!-- Tour Card 1 - More compact -->
		  <div class="tour-card flex-shrink-0 w-64 bg-white rounded-lg overflow-hidden shadow hover:shadow-md transition-shadow group">
			<div class="relative h-32 overflow-hidden">
			  <img src="/api/placeholder/400/320" alt="University Campus Tour" class="w-full h-full object-cover transition-transform group-hover:scale-105 duration-500">
			  <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent flex items-end">
				<div class="p-2">
				  <span class="px-2 py-0.5 bg-blue-600 text-white text-xs font-semibold rounded-full">Educational</span>
				  <h3 class="text-white text-sm font-bold mt-1">University Campus</h3>
				</div>
			  </div>
			</div>
			<div class="p-2">
			  <div class="flex justify-between items-center text-xs text-gray-500 mb-2">
				<span><i class="fas fa-map-marker-alt mr-1"></i> 5 Views</span>
				<span><i class="fas fa-clock mr-1"></i> 15 min</span>
			  </div>
			  <a href="#" class="block text-center bg-gray-800 hover:bg-blue-600 text-white text-sm py-1 rounded transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500">
				Start Tour
			  </a>
			</div>
		  </div>
		  
		  <!-- Tour Card 2 -->
		  <div class="tour-card flex-shrink-0 w-64 bg-white rounded-lg overflow-hidden shadow hover:shadow-md transition-shadow group">
			<div class="relative h-32 overflow-hidden">
			  <img src="/api/placeholder/400/320" alt="Modern Art Gallery" class="w-full h-full object-cover transition-transform group-hover:scale-105 duration-500">
			  <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent flex items-end">
				<div class="p-2">
				  <span class="px-2 py-0.5 bg-green-600 text-white text-xs font-semibold rounded-full">Cultural</span>
				  <h3 class="text-white text-sm font-bold mt-1">Art Gallery</h3>
				</div>
			  </div>
			</div>
			<div class="p-2">
			  <div class="flex justify-between items-center text-xs text-gray-500 mb-2">
				<span><i class="fas fa-map-marker-alt mr-1"></i> 8 Views</span>
				<span><i class="fas fa-clock mr-1"></i> 25 min</span>
			  </div>
			  <a href="#" class="block text-center bg-gray-800 hover:bg-blue-600 text-white text-sm py-1 rounded transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500">
				Start Tour
			  </a>
			</div>
		  </div>
		  
		  <!-- Tour Card 3 -->
		  <div class="tour-card flex-shrink-0 w-64 bg-white rounded-lg overflow-hidden shadow hover:shadow-md transition-shadow group">
			<div class="relative h-32 overflow-hidden">
			  <img src="/api/placeholder/400/320" alt="Research Laboratory" class="w-full h-full object-cover transition-transform group-hover:scale-105 duration-500">
			  <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent flex items-end">
				<div class="p-2">
				  <span class="px-2 py-0.5 bg-purple-600 text-white text-xs font-semibold rounded-full">Scientific</span>
				  <h3 class="text-white text-sm font-bold mt-1">Research Lab</h3>
				</div>
			  </div>
			</div>
			<div class="p-2">
			  <div class="flex justify-between items-center text-xs text-gray-500 mb-2">
				<span><i class="fas fa-map-marker-alt mr-1"></i> 6 Views</span>
				<span><i class="fas fa-clock mr-1"></i> 20 min</span>
			  </div>
			  <a href="#" class="block text-center bg-gray-800 hover:bg-blue-600 text-white text-sm py-1 rounded transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500">
				Start Tour
			  </a>
			</div>
		  </div>
		  
		  <!-- Tour Card 4 -->
		  <div class="tour-card flex-shrink-0 w-64 bg-white rounded-lg overflow-hidden shadow hover:shadow-md transition-shadow group">
			<div class="relative h-32 overflow-hidden">
			  <img src="/api/placeholder/400/320" alt="Conference Center" class="w-full h-full object-cover transition-transform group-hover:scale-105 duration-500">
			  <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent flex items-end">
				<div class="p-2">
				  <span class="px-2 py-0.5 bg-yellow-600 text-white text-xs font-semibold rounded-full">Business</span>
				  <h3 class="text-white text-sm font-bold mt-1">Conference Center</h3>
				</div>
			  </div>
			</div>
			<div class="p-2">
			  <div class="flex justify-between items-center text-xs text-gray-500 mb-2">
				<span><i class="fas fa-map-marker-alt mr-1"></i> 4 Views</span>
				<span><i class="fas fa-clock mr-1"></i> 10 min</span>
			  </div>
			  <a href="#" class="block text-center bg-gray-800 hover:bg-blue-600 text-white text-sm py-1 rounded transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500">
				Start Tour
			  </a>
			</div>
		  </div>
		  
		  <!-- Tour Card 5 -->
		  <div class="tour-card flex-shrink-0 w-64 bg-white rounded-lg overflow-hidden shadow hover:shadow-md transition-shadow group">
			<div class="relative h-32 overflow-hidden">
			  <img src="/api/placeholder/400/320" alt="Historic Museum" class="w-full h-full object-cover transition-transform group-hover:scale-105 duration-500">
			  <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent flex items-end">
				<div class="p-2">
				  <span class="px-2 py-0.5 bg-red-600 text-white text-xs font-semibold rounded-full">Historical</span>
				  <h3 class="text-white text-sm font-bold mt-1">Historic Museum</h3>
				</div>
			  </div>
			</div>
			<div class="p-2">
			  <div class="flex justify-between items-center text-xs text-gray-500 mb-2">
				<span><i class="fas fa-map-marker-alt mr-1"></i> 12 Views</span>
				<span><i class="fas fa-clock mr-1"></i> 45 min</span>
			  </div>
			  <a href="#" class="block text-center bg-gray-800 hover:bg-blue-600 text-white text-sm py-1 rounded transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500">
				Start Tour
			  </a>
			</div>
		  </div>
		</div>
	  </div>
	</div>
  </section>
<TeamSection />	


                                            
</MainLayout>