---
import MainLayout from "./MainLayout.astro"
const { frontmatter } = Astro.props;
---
<MainLayout>

<style>
    /* body {
      margin: 0;
      padding: 0;
      background-color: #111;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    } */

    .tour-container {
      width: 90%;
      margin: 0 auto;   
      /* max-width: 1200px; */
      height: 80vh;
      border: 2px solid #fff;
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.5);
    }

    iframe {
      width: 100%;
      height: 100%;
      border: none;
    }
  </style>
  <body>
    <div class="py-10">
    <div class="tour-container">
        <iframe 
          src={frontmatter.TourLink} 
          allowfullscreen>
        </iframe>
      </div>
    </div>
    <hr class="border-2 border-black max-w-6xl mx-auto rounded-xl">

    <section class="mb-8 max-w-5xl mx-auto pt-5 px-2">
      <h2 class="text-2xl font-bold mb-4">Description</h2>
      <p class="text-lg leading-relaxed">
       {frontmatter.description}
      </p>
      
    </section>
    <hr class="border-2 border-black max-w-6xl mx-auto rounded-xl">
    <!-- Property Details Section -->
    <section class=" p-2 rounded-lg max-w-5xl mx-auto">
      <h2 class="text-2xl font-bold mb-6">Property Details</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Left Column -->
        <div>
          <div class="flex justify-between mb-2">
            <span class="font-semibold">Listing Status:</span>
            <span class="font-bold">Active</span>
          </div>
          <div class="flex justify-between mb-2">
            <span class="font-semibold">Full Baths:</span>
            <span>2</span>
          </div>
          <div class="flex justify-between mb-2">
            <span class="font-semibold">Source ID:</span>
            <span>OC24211739</span>
          </div>
          <div class="flex justify-between mb-2">
            <span class="font-semibold">Parking Spaces:</span>
            <span>2</span>
          </div>
          <div class="flex justify-between mb-2">
            <span class="font-semibold">Lot Size:</span>
            <span>1100.0 sqft</span>
          </div>
          <div class="flex justify-between">
            <span class="font-semibold">County:</span>
            <span>Orange</span>
          </div>
        </div>
  
        <!-- Right Column -->
        <div>
          <div class="flex justify-between mb-2">
            <span class="font-semibold">Bedrooms:</span>
            <span>2</span>
          </div>
          <div class="flex justify-between mb-2">
            <span class="font-semibold">Total Baths:</span>
            <span>2</span>
          </div>
          <div class="flex justify-between mb-2">
            <span class="font-semibold">Source ID:</span>
            <span>13070433835046545732</span>
          </div>
          <div class="flex justify-between mb-2">
            <span class="font-semibold">Living Area:</span>
            <span>1037 sqft</span>
          </div>
          <div class="flex justify-between mb-2">
            <span class="font-semibold">Built:</span>
            <span>2006</span>
          </div>
          <div class="flex justify-between">
            <span class="font-semibold">Neighborhood:</span>
            <span>Avenue One (AVE1)</span>
          </div>
        </div>
      </div>
    </section>
  </body>
  </MainLayout>